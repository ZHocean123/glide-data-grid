{
  "name": "vue-glide-data-grid",
  "version": "1.0.0-alpha.1",
  "description": "Vue3 port of Glide Data Grid - A high-performance canvas-based data grid",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint packages/*/src --ext .ts,.vue",
    "lint:fix": "eslint packages/*/src --ext .ts,.vue --fix",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write packages/*/src/**/*.{ts,vue,js,json}",
    "clean": "pnpm -r clean",
    "playground": "pnpm --filter playground dev",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.20.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "vue3",
    "data-grid",
    "canvas",
    "table",
    "performance",
    "virtual-scrolling"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glideapps/glide-data-grid",
    "directory": "vue3-port"
  }
}
