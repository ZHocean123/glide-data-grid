{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "composite": true,
        "jsx": "react",
        "moduleResolution": "node", // make node-16
        "baseUrl": "./",
        "module": "esnext",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "noUnusedParameters": true,
        "strict": true,
        "target": "ES2022", // es2022
        "types": ["vitest", "node"],
        "paths": {
            "@glideapps/glide-data-grid-shared": ["./packages/shared/src/index.ts"],
            "@glideapps/glide-data-grid-shared/*": ["./packages/shared/src/*"]
        }
    }
}
