{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": false,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@glideapps/glide-data-grid-shared": ["../shared/src/index.ts"],
            "@glideapps/glide-data-grid-shared/*": ["../shared/src/*"]
        }
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
