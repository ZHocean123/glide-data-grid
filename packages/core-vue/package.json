{
    "name": "@glideapps/glide-data-grid-vue",
    "version": "6.0.4-alpha23",
    "description": "Vue 3 data grid for beautifully displaying and editing large amounts of data with amazing performance.",
    "sideEffects": [
        "**/*.css"
    ],
    "type": "module",
    "browser": "dist/esm/index.js",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/dts/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/dts/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        },
        "./dist/index.css": {
            "import": "./dist/index.css",
            "require": "./dist/index.css"
        },
        "./index.css": {
            "import": "./dist/index.css",
            "require": "./dist/index.css"
        }
    },
    "scripts": {
        "build": "node ../../config/build.js core-vue",
        "lint": "concurrently \"npm run cycle-check\" \"eslint src --ext .ts,.vue\"",
        "cycle-check": "ts-helper -p ./tsconfig.json -r ./src/index.ts -c",
        "test": "vitest",
        "check-package": "package-check",
        "watch": "chokidar 'src/**/*.ts*' -c 'node ../../config/build.js core-vue'",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/glideapps/glide-data-grid.git",
        "directory": "packages/core-vue"
    },
    "keywords": [
        "vue",
        "vue3",
        "datagrid",
        "data-grid",
        "editor",
        "scrolling",
        "data",
        "table",
        "cell",
        "canvas"
    ],
    "author": "Glide",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/glideapps/glide-data-grid/issues"
    },
    "homepage": "https://grid.glideapps.com",
    "dependencies": {
        "canvas-hypertxt": "^1.0.3",
        "vue-number-format": "^1.0.0"
    },
    "peerDependencies": {
        "@vue/composition-api": "^1.7.2",
        "lodash": "^4.17.19",
        "marked": "^16.0.10",
        "vue": "^3.4.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.27.2",
        "@glideapps/ts-helper": "6.0.0",
        "@skypack/package-check": "^0.2.2",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/vue3": "^9.1.10",
        "@storybook/vue3-vite": "^9.1.10",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vitest/coverage-v8": "^0.34.6",
        "eslint": "^8.57.1",
        "eslint-plugin-vue": "^9.26.0",
        "storybook": "^9.1.10",
        "tsc-esm-fix": "^3.1.2",
        "typedoc": "^0.28.5",
        "vue-resize-detector": "^0.2.0"
    }
}