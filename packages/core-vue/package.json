{
    "name": "@glideapps/glide-data-grid-vue",
    "version": "6.0.4-alpha23",
    "description": "Vue 3 data grid component delivering Glide Data Grid capabilities for Vue projects.",
    "sideEffects": [
        "**/*.css"
    ],
    "type": "module",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/dts/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/dts/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run build:types && npm run build:lib",
        "build:types": "vue-tsc --project tsconfig.build.json --declaration --emitDeclarationOnly",
        "build:lib": "vite build --config vite.config.ts",
        "lint": "eslint src --ext .ts,.tsx,.vue",
        "test": "vitest",
        "type-check": "vue-tsc --project tsconfig.build.json --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glideapps/glide-data-grid.git",
        "directory": "packages/core-vue"
    },
    "keywords": [
        "vue",
        "data-grid",
        "grid",
        "canvas",
        "glide",
        "editor"
    ],
    "author": "Glide",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/glideapps/glide-data-grid/issues"
    },
    "homepage": "https://grid.glideapps.com",
    "dependencies": {
        "@glideapps/glide-data-grid-shared": "6.0.4-alpha23"
    },
    "peerDependencies": {
        "vue": "^3.4.0"
    },
    "devDependencies": {
        "@testing-library/vue": "^8.1.0",
        "@vitejs/plugin-vue": "^5.2.0",
        "@vue/test-utils": "^2.4.6",
        "vite": "^6.0.5",
        "vue-tsc": "^2.2.0",
        "@storybook/vue3": "^9.1.2",
        "@storybook/vue3-vite": "^9.1.2",
        "@storybook/addon-docs": "^9.1.2",
        "@storybook/addon-links": "^9.1.2",
        "storybook": "^9.1.2"
    }
}