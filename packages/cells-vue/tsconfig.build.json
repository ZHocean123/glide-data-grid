{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist/dts",
        "outDir": "./dist/dts",
        "rootDir": "./src",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "test",
        "dist"
    ]
}
